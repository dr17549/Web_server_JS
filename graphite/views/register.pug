extends layout

block content
  h1 Register

  // register form
  form(method='POST' action='/register')
    if message
      .alert.alert-danger(role="alert")= message
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='name@email.com' name='email')
    div.form-group
      label(for='pw') Password:
      input#pw.form-control(type='password' name='password' placeholder="password")
    button.btn.btn-primary(type='submit') Register