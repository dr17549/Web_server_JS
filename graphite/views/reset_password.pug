extends layout

block content
  h1 Reset Password

  // register form
  form(method='POST' action='/reset_password')
    if message
      .alert.alert-danger(role="alert")= message
      p(style={color: 'red'}) #{message}
    if error
      p(style={color: 'red'}) #{error}
    //- div.form-group
    //-   label(for='email') Email:
    //-   input#email.form-control(type='email', placeholder='name@email.com' name='email')
    div.form-group
      label(for='password') Password:
      input#email.form-control(type='password', placeholder='password' name='password')
    div.form-group
      label(for='confirm_password') Confirm Password:
      input#pw.form-control(type='password' name='confirm_password' placeholder="confirm_password")
    button.btn.btn-primary(type='submit') Submit