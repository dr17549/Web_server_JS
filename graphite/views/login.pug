extends layout

block content
  h1 Log In

  form(action="/login" method="POST")
    if message
      .alert.alert-danger(role="alert")= message
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='name@email.com' name='email')
    div.form-group
      label(for='pw') Password:
      input#pw.form-control(type='password' name='password' placeholder='password')
    button.btn.btn-primary(type='submit', style="margin-bottom: 0.5rem;" id="submit_login") Log In
  
  p
    a(href = "/register") Don't have an account? Sign up here!
  p
    a(href = "/forgot_password") Help! I forgot my password!